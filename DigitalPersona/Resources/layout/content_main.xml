
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical" android:gravity="center_vertical">
    <TextView
        android:text="Please select an option to test your reader"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/textView1" />

    <Button
        android:text="Enrollment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnEnrollment" 
        android:layout_gravity="center_horizontal"/>
    <Button
        android:text="Verification"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEnrollment"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnVerification"  
        android:layout_gravity="center_horizontal"/>
        <Button
        android:text="Identification"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnVerification"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnIdentification"  
        android:layout_gravity="center_horizontal"/>

    </LinearLayout>